# Cache immutable assets for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS for 1 day, allowing for updates
/dist/*
  Cache-Control: public, max-age=86400

# Cache main.js for 1 day, allowing for updates (REMOVED immutable)
/main.js
  Cache-Control: public, max-age=86400

# Do not cache HTML files to ensure users always get the latest version
/index.html
  Cache-Control: no-cache
/about.html
  Cache-Control: no-cache
/profiles.html
  Cache-Control: no-cache
/locations.html
  Cache-Control: no-cache
/faq.html
  Cache-Control: no-cache
/blog.html
  Cache-Control: no-cache
/privacy-policy.html
  Cache-Control: no-cache
/404.html
  Cache-Control: no-cache
