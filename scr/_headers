  Cache-Control: public, max-age=31536000, immutable
/images/*
  Cache-Control: public, max-age=31536000, immutable
/output.css
  Cache-Control: public, max-age=31536000, immutable
/main.js
  Cache-Control: public, max-age=31536000, immutable

# Do not cache HTML files, always check for a new version
/*.html
  Cache-Control: no-cache


# --- Security Headers (Upgraded) ---
/*
  # Content Security Policy (CSP) - ป้องกัน XSS
  # อนุญาตให้โหลดทรัพยากรจากโดเมนที่กำหนดเท่านั้น
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https://hgzbgpbmymoiwjpaypvl.supabase.co; font-src 'self' https://cdnjs.cloudflare.com; connect-src 'self' https://hgzbgpbmymoiwjpaypvl.supabase.co https://www.google-analytics.com; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';

  # บังคับให้ใช้ HTTPS เสมอ
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # ป้องกัน Clickjacking
  X-Frame-Options: DENY

  # ป้องกัน Content Type Sniffing
  X-Content-Type-Options: nosniff

  # ควบคุมข้อมูลที่ส่งไปยังเว็บอื่นเมื่อคลิกลิงก์
  Referrer-Policy: strict-origin-when-cross-origin

  # เปิดใช้งาน XSS Protection ของเบราว์เซอร์ (สำหรับเบราว์เซอร์รุ่นเก่า)
  X-XSS-Protection: 1; mode=block

  # ปิดการใช้งานฟีเจอร์ที่ไม่จำเป็นของเบราว์เซอร์
