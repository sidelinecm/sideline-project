  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all -s build -p watch serve",
    "build": "npm-run-all -s clean copy build:css",
    "serve": "live-server dist --wait=100",
    "clean": "rimraf dist",
    "watch": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/output.css --minify",
    "copy": "npm-run-all -p copy:*",
    "copy:html": "copyfiles -u 1 \"*.html\" \"blog/**/*.html\" dist",
    "copy:js": "copyfiles -u 1 main.js dist",
    "copy:css": "copyfiles -u 1 all.min.css dist",
    "copy:libs": "copyfiles -u 1 \"libs/**/*.*\" dist/libs",
    "copy:fonts": "copyfiles -u 1 \"fonts/**/*.*\" dist/fonts",
    "copy:webfonts": "copyfiles -u 1 \"webfonts/**/*.*\" dist/webfonts",
    "copy:images": "copyfiles -u 1 \"images/**/*.*\" dist/images",
    "copy:icons": "copyfiles -u 1 \"icons/**/*.*\" dist/icons",
    "copy:manifest": "copyfiles -u 1 manifest.webmanifest dist",
    "copy:configs": "copyfiles -u 1 _headers netlify.toml robots.txt sitemap.xml dist",
    "format": "prettier --write \"**/*.{html,js,css}\""
  },