{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern web project built with Tailwind CSS.",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "watch:css": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/output.css --minify",
    "copy": "copyfiles -u 0 \"*.html\" \"main.js\" \"sw.js\" \"manifest.webmanifest\" \"robots.txt\" \"sitemap.xml\" \"_headers\" \"netlify.toml\" \"fonts/**/*\" \"images/**/*\" \"icons/**/*\" dist/",
    "build": "npm-run-all clean build:css copy"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}