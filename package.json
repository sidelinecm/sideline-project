{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern, performance-optimized PWA built with Tailwind CSS.",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    // ตรวจสอบ path ใน copy commands ให้ชี้ไปที่ scr/
    "copy:assets": "copyfiles -u 1 \"scr/**/!(*.css|*.html|*.js|*.webmanifest|*.txt|*.xml|*.toml)\" dist",
    "copy:root": "copyfiles -u 1 \"scr/*.html\" \"scr/*.js\" \"scr/*.webmanifest\" \"scr/*.txt\" \"scr/*.xml\" \"scr/_headers\" \"scr/netlify.toml\" dist",
    "watch:css": "tailwindcss -i ./scr/styles.css -o ./dist/output.css --watch",
    "serve": "live-server dist --wait=100",
    "dev": "npm-run-all clean -p watch:css serve \"copy:** --watch\"",
    "build:css": "tailwindcss -i ./scr/styles.css -o ./dist/output.css --minify",
    "build": "npm-run-all clean build:css copy:assets copy:root",
    "start": "http-server dist",
    "format": "prettier --write \"scr/**/*.{html,js,css}\""
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}