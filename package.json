{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern web project built with Tailwind CSS.",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ./app/styles.css -o ./app/output.css --watch",
    "clean": "rimraf dist",
    "build:css": "tailwindcss -i ./app/styles.css -o ./dist/output.css --minify",
    "build:copy": "copyfiles -u 1 \"app/**/*.html\" \"app/main.js\" \"app/fonts/**/*\" \"app/images/**/*\" \"app/_headers\" \"app/_redirects\" \"app/netlify.toml\" dist/",
    "build": "npm-run-all clean -p build:css build:copy"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}