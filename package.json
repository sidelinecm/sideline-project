{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern web project built with Tailwind CSS.",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "clean": "rimraf dist",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/output.css --minify",
    "build:copy": "copyfiles \"src/**/*.html\" \"src/main.js\" \"src/fonts/**/*\" \"src/images/**/*\" \"src/_headers\" \"src/_redirects\" \"src/netlify.toml\" \"src/robots.txt\" \"src/sitemap.xml\" dist/",
    "build": "npm-run-all clean -p build:css build:copy"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  }
}