{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern, performance-optimized PWA built with Tailwind CSS for sideline profiles.",
  "author": "sidelinecm",
  "license": "ISC",
  "private": true,
  "type": "module",  
  "homepage": "https://sidelinechiangmai.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidelinecm/sideline-project.git"
  },
  "scripts": {
    "start": "live-server dist",
    "watch": "tailwindcss -i ./scr/styles.css -o ./dist/output.css --watch",
    "build": "npm-run-all -s clean copy build:css",
    "clean": "rimraf dist",
    "copy": "npm-run-all -p copy:*", 
    "build:css": "tailwindcss -i ./scr/styles.css -o ./dist/output.css --minify",
    "copy:html": "copyfiles -u 1 \"scr/**/*.html\" dist",
    "copy:js": "copyfiles -u 1 \"scr/main.js\" \"scr/sw.js\" dist",
    "copy:fonts": "copyfiles -u 1 \"scr/fonts/**/*.*\" dist",
    "copy:images": "copyfiles -u 1 \"scr/images/**/*.*\" dist",
    "copy:icons": "copyfiles -u 1 \"scr/icons/**/*.*\" dist",
    "copy:manifest": "copyfiles -u 1 \"scr/manifest.webmanifest\" dist"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4"
  }
}