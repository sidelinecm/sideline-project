{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern, performance-optimized PWA built with Tailwind CSS for sideline profiles.",
  "author": "sidelinecm",
  "license": "ISC",
  "private": true,
  "type": "module",
  "homepage": "https://sidelinechiangmai.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidelinecm/sideline-project.git"
  },
  "scripts": {
    "start": "live-server dist",
    "watch": "tailwindcss -i ./src/styles.css -o ./dist/output.css --watch",
    "build": "npm-run-all -s clean copy build:css",
    "clean": "rimraf dist",
    "copy": "npm-run-all -p copy:*",
    "copy:html": "copyfiles -u 1 \"src/**/*.html\" dist",
    "copy:js": "copyfiles -u 1 \"src/main.js\" \"src/sw.js\" dist",
    "copy:fonts": "copyfiles -u 1 \"src/fonts/**/*.*\" dist/fonts",
    "copy:webfonts": "copyfiles -u 1 \"src/webfonts/**/*.*\" dist/webfonts",
    "copy:images": "copyfiles -u 2 \"src/images/images/**/*.*\" dist/images",
    "copy:icons": "copyfiles -u 1 \"src/icons/**/*.*\" dist/icons",
    "copy:blog": "copyfiles -u 1 \"src/blog/**/*.*\" dist/blog",
    "copy:manifest": "copyfiles -u 1 \"src/manifest.webmanifest\" dist",
    "copy:privacy": "copyfiles -u 1 \"src/privacy-policy.html\" dist",
    "copy:profiles": "copyfiles -u 1 \"src/profiles.html\" dist",
    "copy:static": "copyfiles -u 1 \"src/_static/**/*.*\" dist/_static",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/output.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4"
  }
}