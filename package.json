{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern, performance-optimized PWA built with Tailwind CSS for sideline profiles.",
  "author": "sidelinecm",
  "license": "ISC",
  "private": true,
  "homepage": "https://sidelinechiangmai.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidelinecm/sideline-project.git"
  },
  "scripts": {
    "start": "live-server dist --wait=100",
    "watch": "tailwindcss -i ./scr/styles.css -o ./dist/output.css --watch",
    "build": "rimraf dist && npm-run-all -p copy:* && tailwindcss -i ./scr/styles.css -o ./dist/output.css --minify",
    "copy:html": "copyfiles -u 1 \"scr/**/*.html\" dist",
    "copy:js": "copyfiles -u 1 \"scr/main.js\" \"scr/sw.js\" dist",
    "copy:css": "copyfiles -u 1 \"scr/all.min.css\" dist",
    "copy:libs": "copyfiles -u 1 \"scr/libs/**/*.*\" dist/libs",
    "copy:fonts": "copyfiles -u 1 \"scr/fonts/**/*.*\" dist/fonts",
    "copy:webfonts": "copyfiles -u 1 \"scr/webfonts/**/*.*\" dist/webfonts",
    "copy:images": "copyfiles -u 1 \"scr/images/**/*.*\" dist/images",
    "copy:icons": "copyfiles -u 1 \"scr/icons/**/*.*\" dist/icons",
    "copy:manifest": "copyfiles -u 1 \"scr/manifest.webmanifest\" dist",
    "copy:configs": "copyfiles -u 1 \"scr/_headers\" dist"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4"
  }
}
