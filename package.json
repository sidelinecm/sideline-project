{
  "name": "sideline-project",
  "version": "1.0.0",
  "description": "A modern web project built with Tailwind CSS.",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "build": "npm run build:css && npm run build:copy",
    "build:css": "tailwindcss -i ./styles.css -o ./dist/output.css --minify",
    "build:copy": "copyfiles ./*.html main.js fonts/**/* images/**/* _headers _redirects dist"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "tailwindcss": "^3.4.1"
  }
}